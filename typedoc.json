{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["./src/index.ts"],
  "entryPointStrategy": "resolve",
  "out": "docs/api",
  "exclude": [
    "**/node_modules/**",
    "**/test/**",
    "**/*.test.ts",
    "**/dist/**"
  ],

  // ðŸ§­ Enable source linking
  "gitRevision": "main",
  "sourceLinkTemplate": "https://github.com/lonelydev/caloohpay/blob/{gitRevision}/{path}#L{line}",

  "excludePrivate": true,
  "excludeProtected": false,
  "excludeInternal": true,
  "excludeExternals": true,
  "readme": "README.md",
  "name": "CalOohPay API Documentation",
  // ðŸ“¦ Merge all files in one entry module (optional)
  "includeVersion": true,
  // ï¿½ Sort members in docs (alphabetical, source-order, etc.)
  "sort": ["kind", "visibility", "alphabetical"],
  "navigation": {
    "includeCategories": true,
    "includeFolders": true,
    "includeGroups": true
  },
  "navigationLinks": {
    "Contributing": "https://github.com/lonelydev/caloohpay/blob/main/CONTRIBUTING.md",
    "Security": "https://github.com/lonelydev/caloohpay/blob/main/docs/SECURITY.md",
    "GitHub": "https://github.com/lonelydev/caloohpay"
  },
  "categorizeByGroup": true,
  "defaultCategory": "Other",
  "categoryOrder": [
    "Core",
    "Models",
    "Utilities",
    "*"
  ],
  "githubPages": true,
  "hideGenerator": false,
  "searchInComments": true,
  "treatWarningsAsErrors": true,
  "theme": "default",
  "lightHighlightTheme": "light-plus",
  "darkHighlightTheme": "dark-plus",
  "highlightLanguages": ["ts", "js", "json", "csv", "bash"],
  // ðŸ§© Enable TypeScript project config
  "tsconfig": "tsconfig.json",
}
